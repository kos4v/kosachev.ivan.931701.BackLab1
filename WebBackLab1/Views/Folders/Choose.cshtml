@model IEnumerable<WebBackLab1.Models.Folder>


    <h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayName("Type")
            </th>
            <th>
                @Html.DisplayName("Size")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Choose" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    Folder
                </td>
                <td>
                    -
                </td>
                <td>
                    --
                </td>
            </tr>
        }
        @foreach (var item in ViewBag.Picture)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.PictureFile))" />
                </td>
                <td>
                    @item.PictureFile.Length
                </td>
                <td>
                    <a asp-controller="Posts" asp-action="Edit" asp-route-id="@ViewBag.PostsId" asp-route-PictureId="@item.Id" asp-route-Number=@ViewBag.Number>Choose</a>
                </td>
            </tr>
        }
    </tbody>
</table>
